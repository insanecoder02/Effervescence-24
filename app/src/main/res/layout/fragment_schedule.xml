<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".fragments.Schedule">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/rightGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/leftGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:src="@drawable/effebrushlogofull"
                app:layout_constraintEnd_toStartOf="@+id/rightGuide"
                app:layout_constraintStart_toStartOf="@+id/leftGuide"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Schedule"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:layout_constraintEnd_toStartOf="@id/rightGuide"
                app:layout_constraintStart_toEndOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                tools:layout_editor_absoluteX="105dp" />

            <ImageView
                android:id="@+id/scheduleShowImageView"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:paddingHorizontal="12dp"
                android:src="@drawable/whilte_broder"
                android:visibility="invisible"
                app:layout_constraintEnd_toStartOf="@id/rightGuide"
                app:layout_constraintStart_toEndOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                tools:layout_editor_absoluteX="136dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/loadschedule"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="5dp"
                android:padding="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/scheduleShowImageView"
                app:layout_constraintEnd_toStartOf="@id/rightGuide"
                app:layout_constraintStart_toEndOf="@id/leftGuide"
                app:layout_constraintTop_toTopOf="@+id/scheduleShowImageView"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/gama" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@id/rightGuide"
                app:layout_constraintStart_toEndOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/scheduleShowImageView"
                tools:layout_editor_absoluteX="82dp"
                tools:layout_editor_absoluteY="472dp">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/spinner_bag"
                    android:dropDownSelector="@drawable/arrow_drop_down_fill0_wght400_grad0_opsz48"
                    android:dropDownWidth="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:textAlignment="center"
                    android:spinnerMode="dropdown"/>

                <ImageView
                    android:id="@+id/downlaod"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/baseline_download_24"
                    app:tint="@color/white"
                    tools:layout_editor_absoluteY="525dp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>